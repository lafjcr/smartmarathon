@model TimeSpan

@{
    var showHour = Convert.ToBoolean(ViewData["ShowHour"]);
}

@Html.DropDownList("Hours", Enumerable.Range(0, 24)
    .Select(i => new SelectListItem
    {
        Value = i.ToString(),
        Text = i.ToString(),
        Selected = Model.Hours == i
    }), new { @class = "form-control form-control2 timespan", @placeholder = "HH", @style = !showHour ? "display:none" : "" })&nbsp;

@Html.Label(":", new { @style = !showHour ? "display:none" : "" })&nbsp;
   

@Html.DropDownList("Minutes", Enumerable.Range(0, 60)
    .Select(i => new SelectListItem
    {
        Value = i.ToString(),
        Text = i.ToString(),
        Selected = Model.Minutes == i
    }), new { @class = "form-control form-control2 timespan", @placeholder = "MM" })&nbsp;

@Html.Label(":")&nbsp;

@Html.DropDownList("Seconds", Enumerable.Range(0, 60)
    .Select(i => new SelectListItem
    {
        Value = i.ToString(),
        Text = i.ToString(),
        Selected = Model.Seconds == i
    }), new { @class = "form-control form-control2 timespan", @placeholder = "SS" })