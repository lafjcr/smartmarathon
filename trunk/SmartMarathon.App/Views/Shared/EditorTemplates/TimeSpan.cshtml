@model TimeSpan

@Html.DropDownList("", Enumerable.Range(0, 24)
    .Select(i => new SelectListItem
    {
        Value = i.ToString(),
        Text = i.ToString(),
        Selected = Model.Hours == i
    }), new { @class = "form-control form-control2 timespan", @placeholder = "HH" })&nbsp;

@Html.Label(":")&nbsp;

@Html.DropDownList("", Enumerable.Range(0, 60)
    .Select(i => new SelectListItem
    {
        Value = i.ToString(),
        Text = i.ToString(),
        Selected = Model.Minutes == i
    }), new { @class = "form-control form-control2 timespan", @placeholder = "MM" })&nbsp;

@Html.Label(":")&nbsp;

